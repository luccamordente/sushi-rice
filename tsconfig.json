{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,

    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,

    "module": "es2020",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "jsx": "preserve",
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"]
}
